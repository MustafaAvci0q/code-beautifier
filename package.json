{
    "name": "code-beautifier",
    "displayName": "Code Beautifier",
    "description": "Beautify html, js, css, sass and less code (extension for Visual Studio Code)",
    "version": "1.1.3",
    "publisher": "michelemelluso",
    "license": "Apache-2.0",
    "icon": "icon.png",
    "bugs": {
        "url": "https://github.com/tierratelematics/code-beautifier/issues",
        "email": "michele.jr.melluso@gmail.com"
    },
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Code Beautify Configuration",
            "properties": {
                "beautify.languages": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "javascript",
                        "json",
                        "scss",
                        "sass",
                        "css",
                        "html"
                    ],
                    "description": "Language to beautify"
                }
            }
        },
        "commands": [
            {
                "command": "beautify.format",
                "title": "Beautify Code"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "js-beautify": "^1.6.4"
    },
    "devDependencies": {
        "typescript": "^1.8.10",
        "vscode": "^0.11.18",
        "assert": "^1.4.1"
    }
}